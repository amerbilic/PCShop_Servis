@using Microsoft.AspNetCore.Http
@using DataAccessLayer.Models
@using Web.Areas.Customer
@using Microsoft.AspNetCore.Identity
@using Web.Areas.Customer.Helpers
@inject SignInManager<ApplicationUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PCShop_Servis</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap-slate.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Account" asp-action="Index">PCShop_Servis</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Customer" asp-controller="Account" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Customer" asp-controller="Customer" asp-action="Index">Artikli</a>
                        </li>
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Admin" asp-controller="Administration" asp-action="SMS">SendSMS</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Manage
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a asp-action="ListUsers" asp-controller="Administration" asp-area="Admin" class="dropdown-item">Users</a>
                                    <a asp-action="ListRoles" asp-controller="Administration" asp-area="Admin" class="dropdown-item">Roles</a>
                                </div>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Manage Account
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword" asp-area="Customer">Password </a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-action="logout" asp-controller="account">
                                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Customer" asp-controller="Account" asp-action="register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Customer" asp-controller="Account" asp-action="login">Login</a>
                            </li>
                        }
                        <li class="nav-item bg-primary rounded-lg" id="shakeme">
                            <a class="nav-link text-white" asp-area="Customer" asp-controller="Kosarica" asp-action="Index">
                                <span class="oi oi-basket" title="basket" aria-hidden="true"></span>
                                <span class="badge badge-light text-danger" id="notification_count">@LayoutHelpers.NotificationCount(Context)</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - PCShop_Servis - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @RenderBody()
</body>
</html>
